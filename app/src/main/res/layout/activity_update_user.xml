<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserActivity">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="500dp"
      android:layout_height="797dp"
      android:layout_marginTop="-50dp"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/registerbackground"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="-45dp" />

  <TextView
      android:id="@+id/uUpdateHead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="56dp"
      android:text="Profile"
      android:textColor="#2E303C"
      android:textSize="@dimen/HeaderText"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/uUpdateName"
      android:layout_width="@dimen/register_text_width"
      android:layout_height="@dimen/text_height"
      android:layout_marginTop="44dp"
      android:ems="10"
      android:hint="Name"
      android:inputType="text"
      android:textSize="@dimen/NormalText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.504"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uUpdateHead" />

  <EditText
      android:id="@+id/uUpdateEmail"
      android:layout_width="@dimen/register_text_width"
      android:layout_height="@dimen/text_height"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:textSize="@dimen/NormalText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uUpdateName" />

  <EditText
      android:id="@+id/uUpdatePhone"
      android:layout_width="@dimen/register_text_width"
      android:layout_height="@dimen/text_height"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Phone"
      android:inputType="number"
      android:textSize="@dimen/NormalText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uUpdateEmail" />

  <EditText
      android:id="@+id/uUpdateAddress"
      android:layout_width="@dimen/register_text_width"
      android:layout_height="@dimen/text_height"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Address"
      android:inputType="textPostalAddress"
      android:textSize="@dimen/NormalText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uUpdatePhone" />

  <EditText
      android:id="@+id/uUpdatePassword"
      android:layout_width="@dimen/register_text_width"
      android:layout_height="@dimen/text_height"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword"
      android:textSize="@dimen/NormalText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uUpdateAddress" />

  <Button
      android:id="@+id/uUpdateBtn"
      android:layout_width="@dimen/Lbutton_Width"
      android:layout_height="@dimen/Button_Height"
      android:layout_marginTop="28dp"
      android:backgroundTint="@color/main_orange"
      android:text="Update Account"
      android:textAlignment="center"
      android:textAllCaps="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.529"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uUpdatePassword" />

  <Button
      android:id="@+id/uDeleteProfile"
      android:layout_width="148dp"
      android:layout_height="44dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="52dp"
      android:backgroundTint="#E1E5EF"
      android:onClick="registerClear"
      android:text="Delete Profile"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="#606060"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>